{
  "name": "@qiwi/semantic-release-gh-pages-plugin",
  "version": "5.0.3",
  "description": "gh-pages publishing plugin for semantic-release",
  "keywords": [
    "gh-pages",
    "ghpages",
    "github pages",
    "semantic-release",
    "semantic release"
  ],
  "main": "target/es5/index.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/semantic-release-gh-pages-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/qiwi/semantic-release-gh-pages-plugin/issues"
  },
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf target flow-typed typings docs coverage",
    "lint": "tslint -p tsconfig.test.json src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "jest --config=jest.config.json --detectOpenHandles --forceExit",
    "test:report": "yarn test && yarn coveralls:push",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "docs": "typedoc src/main/ts --ignoreCompilerErrors || exit 0",
    "postupdate": "yarn && npx yarn-audit-fix && yarn build && yarn test",
    "publish:beta": "npm publish --no-git-tag-version --tag beta"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/git-url-parse": "^9.0.0",
    "@types/semantic-release": "^17.2.0",
    "@types/aggregate-error": "^1.0.1",
    "@types/gh-pages": "^3.0.0",
    "@types/lodash": "^4.14.165",
    "aggregate-error": "^3.1.0",
    "debug": "^4.3.1",
    "execa": "^5.0.0",
    "gh-pages": "^3.1.0",
    "git-url-parse": "^11.4.3",
    "lodash": "^4.17.20",
    "queuefy": "^1.1.3",
    "read-pkg": "^5.2.0",
    "then-request": "^6.0.2",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@qiwi/libdefkit": "2.1.5",
    "@types/jest": "^26.0.19",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-qiwi": "^1.6.1",
    "typedoc": "^0.19.2",
    "typescript": "4.1.3"
  }
}
